<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_main_container">

    <FrameLayout
        android:id="@+id/fl_portfolio_day"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/pic_portfolio_day">

        <TextView
            android:id="@+id/tv_portfolio_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="作品集指导活动"
            android:textColor="@color/color_white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_portfolio_day_location"
            android:layout_marginTop="65dp"
            android:layout_marginStart="23dp"
            android:textSize="12sp"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Richmond"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_announcements"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="消息通知"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_ratings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/pic_ratings"
            android:text="作品点评"
            android:textSize="30sp"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_tutorials"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/pic_tutorials"
            android:text="自制教程"
            android:textColor="@color/color_black"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:drawableTop="@mipmap/ic_launcher"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_sell"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/pic_sell"
            android:text="作品义卖"
            android:textSize="30sp"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:paddingTop="10dp"
            android:drawableTop="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_volunteer_opportunities"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/pic_volunteer_opportunities"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="公益活动"
            android:textColor="@color/color_black"
            android:textSize="30sp"/>

    </LinearLayout>

</LinearLayout>