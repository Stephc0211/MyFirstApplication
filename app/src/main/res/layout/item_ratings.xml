<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ratings_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pic_profile_pic"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tv_ratings_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="用户名" />

        <Button
            android:id="@+id/btn_ratings_follow"
            android:text="关注"
            android:textColor="@color/color_black"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_light_grey"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ratings_item_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="这是我近期的作品。。。。"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_ratings_item_pic1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/pic_sell" />
        <ImageView
            android:id="@+id/iv_ratings_item_pic2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/pic_sell"/>
        <ImageView
            android:id="@+id/iv_ratings_item_pic3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/pic_sell"/>
        <ImageView
            android:id="@+id/iv_ratings_item_pic4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/pic_sell"/>
        <ImageView
            android:id="@+id/iv_ratings_item_pic5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/pic_sell"/>
        <TextView
            android:id="@+id/tv_ratings_more_pics"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:text="+5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="评论"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            />

        <ImageView
            android:id="@+id/iv_ratings_star1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/tab_ratings_stars" />
        <ImageView
            android:id="@+id/iv_ratings_star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/tab_ratings_stars" />

        <ImageView
            android:id="@+id/iv_ratings_star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/tab_ratings_stars" />
        <ImageView
            android:id="@+id/iv_ratings_star4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/tab_ratings_stars" />
        <ImageView
            android:id="@+id/iv_ratings_star5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/tab_ratings_stars" />


    </LinearLayout>

</LinearLayout>