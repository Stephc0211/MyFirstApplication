<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="个人主页"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@color/color_dark_grey"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/iv_user_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_username_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="22sp"
            android:text="用户名"
            android:layout_below="@id/iv_user_profile_pic"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/color_dark_grey"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简介 : "
        android:textColor="@color/color_black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tv_self_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:minLines="2"
        android:text="babbababababbab"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_expand_intro"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_btn_light_grey"
        android:gravity="center"
        android:text="展开"
        android:textColor="@color/color_white"
        android:textSize="10sp" />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/color_dark_grey"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="关注"
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:gravity="center|end"
            android:paddingEnd="10dp"
            />

        <TextView
            android:id="@+id/tv_following_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="19"
            android:textColor="@color/color_light_grey"
            android:gravity="start|center"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/color_black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="粉丝"
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:gravity="center|end"
            android:paddingEnd="10dp"
            />

        <TextView
            android:id="@+id/tv_follower_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="21"
            android:textSize="20sp"
            android:textColor="@color/color_light_grey"
            android:gravity="start|center"
            />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/color_dark_grey"
        />

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="设置"
        android:textColor="@color/color_black"
        android:textSize="20sp"
        android:gravity="center"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/color_dark_grey"
        />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="退出"
        android:textSize="20sp"
        android:textColor="@color/color_black"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />

</LinearLayout>